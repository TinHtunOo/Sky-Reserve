generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // Vercel Postgres URL
  directUrl = env("POSTGRES_URL_NON_POOLING") // Vercel Postgres Direct URL for migrations
}

model flights {
  id                 Int        @id @default(autoincrement())
  airline            String?    
  airlineLogo        String?    
  origin             String?    
  destination        String?    
  originAirport      String?    
  destinationAirport String?    
  departureDate      DateTime?  
  departureTime      DateTime?  
  departureTimeRange String?    
  arrivalTime        DateTime?  
  arrivalDate        DateTime?  
  price              Decimal?   @db.Decimal(10, 2)
  stops              Int?
  duration           Int?
  boardingTime       DateTime?  
  flightNumber       String?    
  cabinClass         String?    
  bookings           bookings[]
}

model bookings {
  id         Int       @id @default(autoincrement())
  user_id    Int
  flight_id  Int
  created_at DateTime? @default(now())
  status     String?   @default("pending")
  users      users     @relation(fields: [user_id], references: [id], onUpdate: Restrict, map: "bookings_ibfk_1")
  flights    flights   @relation(fields: [flight_id], references: [id], onUpdate: Restrict, map: "bookings_ibfk_2")

  @@index([flight_id], map: "flight_id")
  @@index([user_id], map: "user_id")
}

model users {
  id         Int        @id @default(autoincrement())
  full_name  String     
  email      String     @unique(map: "users_email_unique")
  password   String     
  created_at DateTime?  @default(now())
  bookings   bookings[]
}

model admin {
  id       Int    @id @default(autoincrement())
  name     String 
  email    String @unique(map: "admin_email_unique")
  password String 
}